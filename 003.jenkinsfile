pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                // Define SSH key
                sshagent(['ssh']) {
                    // Clone repository using SSH
                    git branch: 'main',
                        credentialsId: 'ssh',
                        url: 'git@github.com:DEL-ORG/s8-learning-git.git'
                }
            }
        }
    }
}
